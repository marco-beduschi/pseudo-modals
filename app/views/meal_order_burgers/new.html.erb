<article
  class="
    w-full bg-white p-4 rounded-lg rounded-b-none border border-b-0
    border-slate-200 overflow-clip self-end
  "
>
  <div class="flex flex-col gap-4">
    <div class="flex bg-white -mx-4 -mt-4 p-4">
      <div class="flex gap-4">
        <%= link_to(meal_order_path(@meal_order), class: 'h-8 w-8 flex justify-center items-center border rounded-md') do %>
          ‚Üê
          <span class="sr-only">Go back</span>
        <% end %>
        <h2 class='font-bold text-xl self-center'>Add a burger</h2>
      </div>
    </div>
    <section>
      <%= form_for([@meal_order, @meal_order_burger]) do |f| %>
        <div class="flex flex-col gap-4">
          <div class="flex flex-col md:flex-row gap-2">
            <% Burger.all.each do |burger| %>
              <label class="flex justify-between gap-2 items-center border border-slate-200 rounded-md py-4 px-6 has-[:checked]:bg-lime-100 has-[:checked]:text-lime-900 has-[:checked]:border-lime-500">
                <p class="font-bold"><%= burger.name %></p>
                <p class="text-slate-500 shrink-0">+ <%= number_to_currency burger.price %></p>
                <%= f.radio_button :burger_id, burger.id, class: 'checked:bg-lime-400 checked:hover:bg-lime-400 checked:active:bg-lime-400 checked:focus:bg-lime-400 focus:bg-lime-400 focus:outline-none focus:ring-1 focus:ring-lime-400 sr-only' %>
              </label>
            <% end %>
          </div>
          <%= f.submit t('.submit', default: "Add to order"), class: 'bg-lime-400 px-2 py-4 w-full rounded-md' %>
        </div>
      <% end %>
    </section>
  </div>
</article>