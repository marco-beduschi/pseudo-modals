<article
  class="
    w-full bg-slate-50 p-4 rounded-lg rounded-b-none border border-b-0
    border-slate-200 overflow-clip self-end
  "
>
  <div class="flex flex-col gap-4">
    <div class="bg-white -mx-4 -mt-4 p-4">
      <h2 class='font-bold text-xl'>Hello, customer!</h2>
      <p>Let's get your order started!</p>
    </div>
    <section>
      <ul class="flex flex-col gap-2">
        <li class="">
          <%= link_to(new_meal_order_meal_order_burger_path(meal_order_id: @meal_order.id), class: "flex flex-row items-center gap-2 bg-white p-2 rounded-md") do %>
            <% if @meal_order.meal_order_burger.present? %>
              <div
                class="
                  h-5 w-5 grid place-content-center shrink-0 border-2 border-lime-400
                  text-lime-500 rounded-full
                "
              >âœ“</div>
            <% else %>
              <div
                class="
                  h-5 w-5 shrink-0 border-2 border-dashed border-slate-400
                  rounded-full
                "
              ></div>
            <% end %>
            <span>Add a Burger</span>
          <% end %>
        </li>
        <li class="">
          <a href="" class="flex flex-row items-center gap-2 bg-white p-2 rounded-md">
            <div
              class="
                h-5 w-5 shrink-0 border-2 border-dashed border-slate-400
                rounded-full
              "
            ></div>
            <span>Add some Fries</span>
          </a>
        </li>
        <li class="">
          <a href="" class="flex flex-row items-center gap-2 bg-white p-2 rounded-md">
            <div
              class="
                h-5 w-5 shrink-0 border-2 border-dashed border-slate-400
                rounded-full
              "
            ></div>
            <span>Add a Drink</span>
          </a>
        </li>
        <li class="">
          <a href="" class="flex flex-row items-center gap-2 bg-white p-2 rounded-md">
            <div
              class="
                h-5 w-5 shrink-0 border-2 border-dashed border-slate-400
                rounded-full
              "
            ></div>
            <span>Leave a tip</span>
          </a>
        </li>
      </ul>
    </section>
  </div>
</article>
